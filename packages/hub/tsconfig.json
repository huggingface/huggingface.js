{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2022",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src", "index.ts", "cli.ts"],
	"exclude": ["dist"]
}
