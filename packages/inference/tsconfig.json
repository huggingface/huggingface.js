{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist"
	},
	"include": ["src", "test", "index.ts"],
	"exclude": ["dist"]
}
