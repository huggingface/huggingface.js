{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022", "DOM"],
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "nodenext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"types": ["vitest/importMeta"]
	},
	"include": ["scripts"],
	"exclude": ["dist"]
}
